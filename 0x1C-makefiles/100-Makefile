CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: m.h ${NAME}

${NAME}: ${OBJ}
    ${CC} $^ -o $@

clean:
    ${RM} .*.swp *~ ${NAME}

oclean:
    ${RM} $(OBJ)

fclean: clean oclean

re: fclean all
